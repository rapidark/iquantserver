    <!-- 查询最近20个已授权用户-->
    <entry key="queryLastTwentyUser">
        <![CDATA[
        SELECT
          a.id as id,
          a.NAME as name,
          a.account as account
        FROM
          user_info a
        WHERE a.status = 10
          AND a.id NOT IN
          (SELECT
            uid
          FROM
            user_role b
          WHERE b.rid = ?)
          ORDER BY
          a.sdate DESC
          limit 20
        ]]>

    </entry>

    <!-- 给定账号或姓名 查询已授权用户-->
    <entry key="queryUserByName">
        <![CDATA[
        SELECT
          a.id as id,
          a.NAME as name,
          a.account as account
        FROM
          user_info a
        WHERE a.status = 10
          AND
          (a.name=? OR a.account=?)
        ]]>

    </entry>


    <!-- 查询最近20个当前角色用户-->
    <entry key="queryLastTwentyRoleUser">
        <![CDATA[
        SELECT
          a.id as id,
          a.name as name,
          a.account as account
        FROM
          user_info a
          INNER JOIN
          user_role b
          ON a.id=b.uid
          WHERE b.rid=?
          AND a.status<>-100
          ORDER BY
          a.sdate DESC
          limit 20
        ]]>

    </entry>

    <!-- 给定账号或姓名 查询当前角色用户-->
    <entry key="queryRoleUser">
        <![CDATA[
        SELECT
           a.id as id,
          a.name as name,
          a.account as account
        FROM
          user_info a
          INNER JOIN
          user_role b
          ON a.id=b.uid
          WHERE
          (a.name=? OR a.account=?)
          AND
          b.rid=?
          AND
          a.status<>-100
        ]]>

    </entry>

