    <comment>角色用户  sql</comment>


    <entry key="roleInfoSql">
        <![CDATA[
                SELECT
  ui.`id` AS id,
  ui.`account` AS account,
  ui.`name` AS NAME,
  ui.`phone` AS phone,
  sd.`name` AS saleName,
  ui.`capital_account` AS capitalAccount,
  ui.`edate` AS endDate,
  ui.`status` AS STATUS
FROM
  user_info ui
  LEFT JOIN sale_department sd
    ON ui.`sale_dep` = sd.`id`
  INNER JOIN user_role ur
    ON ur.`uid` = ui.`id`
  INNER JOIN role_info ri
    ON ri.`id` = ur.`rid`
WHERE ui.status<>-100
  AND ri.`id` = ?
                ]]>

    </entry>
